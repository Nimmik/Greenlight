@model IEnumerable<GreenLight.Models.Post>
@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "그린라이트인가요?";
}

<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm("Search", "Home", FormMethod.Get))
        {
            <h2>@ViewBag.Title</h2>
            <div class="nav-wrapper" id="custom-search-input">
                <input id="search" class="form-control input-group" type="search" name="query" placeholder="검색">
                <span class="input-group-btn">
                    <button class="btn btn-danger" type="submit">
                        <span class="glyphicon glyphicon-search"></span>
                    </button>
                </span>
            </div>
        }

        <div class="postpage">
            @foreach (var p in Model)
            {
                <div class="card-content @(p.Result==null?"":(bool)(p.Result)?"on":"off")">
                    <a href="@Url.Action("Detail", "Home", new {id = p.Id })" class="black-font">
                        <h4 class="postTitle">@p.Title</h4>
                        @*<hr />*@
                        <ul>
                            <li>
                                줄거리 : @Html.DisplayFor(a => p.DescriptionShort)
                            </li>
                            <li>
                                조회수 : @Html.DisplayFor(a => p.Views)
                            </li>
                        </ul>
                        @if (!User.Identity.GetUserId().IsEmpty() && User.Identity.GetUserId().Equals(p.PostedById))
                        {
                            <div class="deleteButton">
                                @Html.ActionLink("삭제", "Delete", "Home", new { PostId = p.Id }, new { onclick = "return confirm('Are you sure you wish to delete this?');", @class = "btn btn-danger btn-sm" })
                            </div>
                        }
                    </a>
                </div>
            }
        </div>
        <hr />
        @Html.ActionLink("글쓰기", "Create", "Home", null, new { @class = "btn btn-info", role = "button" })
    </div>
</div>
<div class="clearfix"></div>

