@model IEnumerable<GreenLight.Models.Post>
@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "Post";
}

<div class="row">
    <div class="col-xs-12 col-sm-8, col-md-9, col-lg-9">
        <div class="nav-wrapper">
            @using (Html.BeginForm("Search", "Home", FormMethod.Get))
            {
                <h2>@ViewBag.Title.</h2>
                <div class="input-field">
                    <input id="search" type="search" name="query">
                    <label for="search"><button><i class="glyphicon glyphicon-search">Search</i></button></label>
                </div>
            }
        </div>
        <div class="postpage">
            @foreach (var p in Model)
            {
                <a href="@Url.Action("Detail", "Home", new {id = p.Id})">
                    <div class="card-content black-text @(p.Result==null?"":(bool)(p.Result)?"on":"off")">
                        <h4>@p.Title</h4>
                        <ul>
                            <li>
                                Description : @Html.DisplayFor(a => p.DescriptionShort)
                            </li>
                            <li>
                                Views : @Html.DisplayFor(a => p.Views)
                            </li>
                            @if (!User.Identity.GetUserId().IsEmpty() && User.Identity.GetUserId().Equals(p.PostedById))
                            {
                                @Html.ActionLink("Delete", "Delete", "Home", new { PostId = p.Id }, new { onclick = "return confirm('Are you sure you wish to delete this?');" })
                            }                            
                        </ul>
                    </div>
                </a>
            }
        </div>
        @Html.ActionLink("글쓰기", "Create", "Home", "class=btn-link role=button")
    </div>
    <div class="col-xs-12 col-sm-4 col-md-3 col-lg-3">
        <div class="side-bar">
            <p>@User.Identity.GetUserName()</p>
        </div>
    </div>
</div>
<div class="clearfix"></div>