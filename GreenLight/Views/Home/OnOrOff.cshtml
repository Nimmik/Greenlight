@model IEnumerable<GreenLight.Models.Post>
@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "그린라이트";
}

<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm("Search", "Home", FormMethod.Get))
        {
            <h2>불을 켜줘</h2>
            <div class="nav-wrapper" id="custom-search-input">
                <input id="search" class="form-control input-group" type="search" name="query" placeholder="검색">
                <span class="input-group-btn">
                    <button class="btn btn-danger" type="submit">
                        <span class="glyphicon glyphicon-search"></span>
                    </button>
                </span>
            </div>
        }

        <ul class="postpage">
            @foreach (var p in Model)
            {
                <li class="postList">
                    <div class="card-content @(p.Result == null ? "" : (bool)(p.Result) ? "on" : "off") hvrbox hvrbox_background">
                        <div class="postTitle"><h4>@p.Title</h4><span class="postTime">@p.CreatedOn.Date.ToString("yyyy/MM/dd")</span></div>
                        @*<hr />*@
                        <ul>
                            <li class="card-descript">
                                줄거리 : @Html.DisplayFor(a => p.DescriptionShort)
                            </li>
                            <li>
                                조회수 : @Html.DisplayFor(a => p.Views)
                            </li>
                        </ul>
                        @if (!User.Identity.GetUserId().IsEmpty() && User.Identity.GetUserId().Equals(p.PostedById))
                        {
                            <span class="deleteButton">
                                @Html.ActionLink("삭제", "Delete", "Home", new { PostId = p.Id }, new { onclick = "return confirm('Are you sure you wish to delete this?');", @class = "btn btn-danger btn-sm" })
                            </span>
                        }
                        <a href="@Url.Action("Detail", "Home", new { id = p.Id })" class="hvrbox-layer_top white-font">
                             @Html.Partial("_CardHover", p.Votes, new ViewDataDictionary {{ "postedbById", p.PostedById }, { "postID", p.Id }})
                        </a>
                    </div>                    
                </li>
            }
        </ul>
        <hr />
        @Html.ActionLink("글쓰기", "Create", "Home", null, new { @class = "btn btn-info", role = "button" })
    </div>
</div>

@section scripts
{
    <script>
        $(document).ready(function () {
            $('.horizontal .progress-fill span').each(function () {
                var percent = $(this).html();
                $(this).parent().css('width', percent);
            });
        });
    </script>
}

