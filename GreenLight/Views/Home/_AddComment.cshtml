@model GreenLight.Models.Comment

<h4>댓글</h4>
@if (!User.Identity.IsAuthenticated)
{
    <input type="text" class="Require-login "value="댓글을 입력하기 위해서 로그인을 해 주세요" readonly />
    <button class="btn btn-default" type="button">@Html.ActionLink("로그인", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</button>
}

else
{
    using (Html.BeginForm("AddComment", "Home", FormMethod.Post, new { id = "commentForm", @class = "form-horizontal" }))
    {
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="input-group">
            @Html.HiddenFor(m => m.PostId)
            <div class="form-group col-lg-11" id="commentFormGroup">
                <input type="text" class="form-control" id="Writing" name="Writing" placeholder="댓글 입력">
                <span class="field-validation-valid help-block" data-valmsg-for="Writing" data-valmsg-replace="true"></span>

                <Input class="btn btn-default" id="commentSubmit" type="submit" value="댓글 등록">
            </div>
        </div>
    </div>
    }
}

